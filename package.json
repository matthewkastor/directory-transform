{
  "name": "directory-transform",
  "version": "2022.11.16",
  "description": "A node module for copying directories and running transforms over file contents, file names, and folder names.",
  "main": "./src/directory-transform.js",
  "directories": {
    "lib": "src",
    "doc": "docs",
    "example": "examples"
  },
  "devDependencies": {
    "atropa-jsformatter": ">=0.1.2",
    "atropa-jslint": ">=0.1.2",
